<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="LeftBox" Background="Black" Margin="-1,0,1.2,0.4">

        <Border x:Name="StateBorder" BorderBrush="White" BorderThickness="0" Background="#FF7C7878" CornerRadius="7" Margin="10,26,993,570">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="White" />
            </Border.Effect>

            <Grid x:Name="StateGrid" Margin="0,0,10,-0.4">
                <TextBlock x:Name="StateDisplay"  Foreground="White" HorizontalAlignment="Left" Height="64" TextWrapping="Wrap" Text="State 표시" VerticalAlignment="Top" Width="198" FontWeight="Bold" TextAlignment="Center" FontSize="35" Background="#997C7878" Opacity="0.8" Margin="22,9,0,0"/>
            </Grid>
        </Border>

        <Border BorderBrush="White" BorderThickness="0"  Margin="10,128,993,269" Background="#FF7C7878" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="White" />
            </Border.Effect>
            <Grid>
                <Button x:Name="TargetSet" Content="Set" HorizontalAlignment="Left" Height="40" Margin="12,216,0,0" VerticalAlignment="Top" Width="210" Background="#FF463B3B" Foreground="White" BorderBrush="#FF463B3B" FontSize="18" Click="TargetSet_Click"/>

                <TextBlock x:Name="TargetInfo" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Target" VerticalAlignment="Top" Width="103" FontWeight="Bold" FontSize="25" Margin="10,10,0,0"/>
                <TextBlock x:Name="TargetType" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Type" VerticalAlignment="Top" Width="85" FontSize="18" Margin="5,61,0,0"/>
                <TextBlock x:Name="Velocity" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Velocity" VerticalAlignment="Top" Width="85" FontSize="18" Margin="5,99,0,0"/>
                <TextBlock x:Name="T_StartPoint" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Start Point" VerticalAlignment="Top" Width="90" FontSize="18" Margin="5,135,0,0"/>
                <TextBlock x:Name="T_FinalPoint" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Final Point" VerticalAlignment="Top" Width="90" FontSize="18" Margin="5,171,0,0"/>


                <TextBlock x:Name="TargetTypeData" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Missile" VerticalAlignment="Top" Width="133" FontSize="18" Margin="101,61,0,0" TextAlignment="Center"/>
                <TextBlock x:Name="VelocityData" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="133" FontSize="18" Margin="101,99,0,0" TextAlignment="Center"/>
                <TextBlock x:Name="T_StartPointData" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="0, 0" VerticalAlignment="Top" Width="133" FontSize="18" Margin="101,135,0,0" TextAlignment="Center" IsEnabled="False"/>
                <TextBlock x:Name="T_FinalPointData" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="200000, 200000" VerticalAlignment="Top" Width="133" FontSize="18" Margin="101,171,0,0" TextAlignment="Center"/>


            </Grid>
        </Border>

        <Border BorderBrush="White" BorderThickness="0"  Margin="10,444,993,44" Background="#FF7C7878" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="White" />
            </Border.Effect>

            <Grid>
                <TextBlock x:Name="MissileInfo"   Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Missle" VerticalAlignment="Top" Width="103" FontWeight="Bold" FontSize="25" Margin="10,10,0,0"/>
                <TextBlock x:Name="M_FinalPoint" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Final Point" VerticalAlignment="Top" Width="90" FontSize="18" Margin="23,68,0,0"/>
                <TextBlock x:Name="M_FinalPointData_X" Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" FontSize="18" Margin="140,68,0,0" TextAlignment="Center" Text="50000" IsEnabled="False"/>

                <Button x:Name="MissileSet" Content="Set" HorizontalAlignment="Left" Height="40" Margin="13,123,0,0" VerticalAlignment="Top" Width="210" Background="#FF463B3B" Foreground="White" BorderBrush="#FF463B3B" FontSize="18" Click="MissileSet_Click"/>
            </Grid>
        </Border>

        <Border BorderBrush="White" BorderThickness="0"  Margin="957,24,20.2,284.4" Background="#FF7C7878" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="White" />
            </Border.Effect>

            <Grid>
                <TextBlock x:Name="EventLogTitle"  Foreground="White" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Event Log" VerticalAlignment="Top" Width="129" FontWeight="Bold" FontSize="25" Margin="10,10,0,0"/>
                <TextBlock x:Name="EventLogBox" HorizontalAlignment="Left" Height="132" TextWrapping="Wrap" Text="로그 들어와야함" VerticalAlignment="Top" Width="220" FontWeight="Bold" Margin="10,71,0,0"/>

            </Grid>
        </Border>
        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" Height="95" Margin="953,437,0,0" VerticalAlignment="Top" Width="280" Background="#FF463B3B" Foreground="White" BorderBrush="#FF463B3B" FontSize="20" RenderTransformOrigin="0,0" FontWeight="Bold"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Height="95" Margin="953,550,0,0" VerticalAlignment="Top" Width="280" Background="#FF7C7878" Foreground="White" FontSize="20" FontWeight="Bold"/>
        <Image x:Name="gridIMG" Source="/Resources/gridimage.PNG" HorizontalAlignment="Left" Height="670" Margin="268,7,0,-7" VerticalAlignment="Top" Width="670" MouseDown="getPosition"/>
        <TextBlock x:Name="outputboxX" HorizontalAlignment="Left" Height="30" Margin="861,589,0,0" TextWrapping="Wrap" Text="dddddd" VerticalAlignment="Top" Width="71" FontSize="15" TextAlignment="Center" FontWeight="Bold" Foreground="White" Background="#992B2B2B"/>
        <TextBlock x:Name="outputboxY" HorizontalAlignment="Left" Height="30" Margin="861,629,0,0" TextWrapping="Wrap" Text="20000" VerticalAlignment="Top" Width="71" FontSize="15" TextAlignment="Center" FontWeight="Bold" Foreground="White" Background="#992B2B2B"/>
        <TextBlock x:Name="outputboxX_title" HorizontalAlignment="Left" Height="30" Margin="813,589,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Width="36" FontSize="15" TextAlignment="Center" FontWeight="Bold" Foreground="White" Background="#992B2B2B" RenderTransformOrigin="1.037,0.484"/>
        <TextBlock x:Name="outputboxY_title" HorizontalAlignment="Left" Height="30" Margin="813,629,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top" Width="36" FontSize="15" TextAlignment="Center" FontWeight="Bold" Foreground="White" Background="#992B2B2B"/>


    </Grid>
</Window>
